{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths" : {
      "src/*": [ "src/*"],
      ".": ["./"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "typeRoots": ["node-modules/@types", "./src/types/*.d.ts"]
  },
  "include": ["src/**/*", "index.ts"],
  "exclude": ["node_modules"]
}
